@model GeHosContract.Contrato.catAgendaVM

<!-- CSS Includes -->
@*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>
<link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css" rel="stylesheet" />*@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agregar</title>
</head>
<body>
    @*@using (Html.BeginForm())*@ 
    @using (Html.BeginForm("Agregar", "Agenda", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>catAgendaVM</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.perApellidoNombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.perApellidoNombre, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.perId, (SelectList)(ViewBag.Persona), new { @class = "select2", @style = "width: 100%" })
                    @Html.ValidationMessageFor(model => model.perApellidoNombre, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.csNombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.csNombre, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model=>model.csId, (SelectList)(ViewBag.ListaCentroSalud), new { @class = "select2", @style="width: 100%" })
                    @Html.ValidationMessageFor(model => model.csNombre, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.espNombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.espNombre, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.espId, (SelectList)(ViewBag.Especialidad), new { @class = "select2", @style = "width: 100%" })
                    @Html.ValidationMessageFor(model => model.espNombre, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.agDuracion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.agDuracion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.agDuracion, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Agregar" class="btn btn-default" />
                </div>
            </div>
        </div>

        @Html.HiddenFor(model => model.espId, "espId");
        @Html.HiddenFor(model => model.csId, "csId");
        @Html.HiddenFor(model => model.perId, "perId");
    }
    
    <div>
        @Html.ActionLink("Volver al inicio", "Index")
    </div>
</body>
</html>

<script>
    $(document).ready(function () {
        $('#csNombre').select2();
        $('#espNombre').select2();
        $('#perApellidoNombre').select2();
    })
</script>
